<div class = 'container'>
  <div class="row">
    <div class = 'col-md-10'>
      <H1 class = "logo"><%= current_user.name %>'s To Do List</H1>
      </br>
      <%= render 'form' %>
      </br>
      <table class="table table-striped">
        <tr>
        <td><b>Description</b></td>
        <td><b>Days Left</b></td>
        <td align="center"><b>Complete</b></td>
        </tr>
          <% @todos.each do |t| %>
            <div class="line-items">
            <tr>
              <td><%= t.description %></td>
              <td><%= distance_of_time_in_words_to_now(t.created_at) %></td>
              <td align="center"><input type="checkbox"></td>
              </tr>
              </div>
          <% end %>
      </table>
    </div>
    </div>
  </div>